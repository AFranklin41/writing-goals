@model IEnumerable<writing_goals.Models.Goal>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SprintId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeGoal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeActual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WordCountGoal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WordCountActual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OptionalGoal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SprintId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoalDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeGoal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeActual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WordCountGoal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WordCountActual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OptionalGoal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
