@model writing_goals.Models.ViewModels.SprintGoalsViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4">Welcome!</h1>
    <input type="button"
           value="Create New Sprint"
           onclick="location.href='@Url.Action("Create", "Sprints")'" />
</div>
<br />
<div>
    <h4>Sprint</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(sprint => sprint.sprint.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(sprint => sprint.sprint.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(sprint => sprint.sprint.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(sprint => sprint.sprint.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(sprint => sprint.sprint.Archived)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(sprint => sprint.sprint.Archived)
        </dd>
    </dl>
</div>
